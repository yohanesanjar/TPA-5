<div class="card card-body">
        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}
  <h3>Edit Task - Todo</h3>
  <form action="/todo/edit" method="POST">
    <div class="form-group">
      <label for="title">Activity / Task</label>
      <input class="form-control" name="title" type="text" placeholder="Title" required>
    </div>
    <div class="form-group">
      <label for="desc">Description</label>
      <textarea class="form-control" name="desc" type="text" placeholder="Description" required></textarea>
    </div>
    <div class="form-group">
      <label for="dueDate">Deadline</label>
      <input class="form-control" name="dueDate" type="text" placeholder="Ex: 02 May 2002" required>
    </div>
        <input type="hidden" value="{{_id}}" name="id">
        <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>